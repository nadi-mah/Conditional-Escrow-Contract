generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agreement {
  id Int @id @default(autoincrement()) 
  onChainId BigInt @unique
  title String?
  detail String?
  payer String
  payee String
  arbiter String
  amount Decimal
  deadline DateTime
  currentState AgreementState
  payerConfirmed Boolean @default(false)
  payeeConfirmed Boolean @default(false)
  disputeWinner String?
  createdAt DateTime @default(now())
}

enum AgreementState {
  Funded
  Completed
  Canceled
  InDispute
}
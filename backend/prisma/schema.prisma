generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agreement {
  id Int @id @default(autoincrement())
  onChainId BigInt
  title String
  detail String
  payer String
  payee String
  arbiter String
  amount Decimal
  deadline DateTime
  currentState AgreementState
  payerConfirmed Boolean
  payeeConfirmed Boolean
  createdAt DateTime @default(now())
}

enum AgreementState {
  Funded
  Completed
  Canceled
  InDispute
}